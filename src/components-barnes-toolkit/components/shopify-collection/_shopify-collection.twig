{#

shopify-collection component

#}

{# Avoid awkward situation where an include inside an include is rejected by a PHP template #}
{% if path is not defined %}
  {% set path = '../' %}
{% endif %}

{% if collections is empty %}
  {%
    set collections = [
      {
        'title': 'Jewelry',
        'image': '//placehold.it/460x460',
        'link': '#'
      },
      {
        'title': 'Accessories &amp; Apparel',
        'image': '//placehold.it/460x460',
        'link': '#'
      },
      {
        'title': 'Gifts &amp; Home',
        'image': '//placehold.it/460x200',
        'link': '#'
      },
      {
        'title': 'Jewelry',
        'image': '//placehold.it/460x460',
        'link': '#'
      },
      {
        'title': 'Accessories &amp; Apparel',
        'image': '//placehold.it/460x460',
        'link': '#'
      }
    ]
  %}
{% endif %}

<div class="m-block m-block--no-border m-shopify-collection">
  <ul class="m-shopify-collection__list">
    {% for collection in collections %}
    <li class="m-shopify-collection__item">
      <h3 class="font-delta m-shopify-collection__title">
        <a href="{{ collection.link }}" class="m-shopify-collection__link">{{ collection.title|raw }}</a>
      </h3>
      <div class="m-shopify-collection__image-container">
        <img class="m-shopify-collection__image" src="{{ collection.image }}" alt="">
      </div>
    </li>
    {% endfor %}
  </ul>
</div>
